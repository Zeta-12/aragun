<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mdp">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="414dp"
      android:layout_height="896dp"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/fond1"
      tools:layout_editor_absoluteY="-83dp" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="245dp"
      android:layout_height="27dp"
      android:layout_marginTop="8dp"
      android:fontFamily="sans-serif-black"
      android:text="BIENVENUE SUR ARAGUN"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@+id/imageView6"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="32dp"
      android:fontFamily="@font/roboto_black"
      android:text="Rejoins la communauté de ton jeu préféré"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/valider"
      android:layout_width="146dp"
      android:layout_height="55dp"
      android:background="@drawable/btn_log"
      android:text="Envoyer le mail"
      android:textColor="#000000"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.763" />

  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="101dp"
      android:layout_height="104dp"
      android:layout_marginBottom="168dp"
      app:layout_constraintBottom_toTopOf="@+id/mail_mdp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.906"
      app:srcCompat="@drawable/logo" />

  <EditText
      android:id="@+id/mail_mdp"
      android:layout_width="227dp"
      android:layout_height="46dp"
      android:layout_marginTop="200dp"
      android:background="@drawable/input_mdp"
      android:ems="10"
      android:hint="@string/entrez_votre_adresse_mail"
      android:inputType="textPersonName"
      android:textSize="15sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView11"
      android:layout_width="295dp"
      android:layout_height="108dp"
      android:text="Nous vous enverrons un lien pour reset votre mot de passe après avoir cliquer sur le bouton envoyer le mail. Veuillez cliquer sur le lien pour reset votre mot de passe."
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/imageView2"
      app:layout_constraintHorizontal_bias="0.487"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>